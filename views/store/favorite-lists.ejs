  <body>
    <%- include("../Partials/nav") %>
      <main>
        <h2 class="registered-homes">
          Here is your favourite homes-list
        </h2>
        <ul class="ul-homes">
          <% favoriteHomes.forEach(Home=> { %>
            <li>
              <div class="div-container">
                <div class="image-div">
                  <img src="<%= Home.imagePath1 %>" class="img-style" alt="Home image" />
                </div>
                <div class="home-name-container">
                  <h3 class="home-name">
                    <%= Home.houseName %>
                  </h3>
                </div>
                <div class="para-div">
                  <p class="para-style"><span>Address :</span>
                    <%= Home.houseAddress %>
                  </p>

                  <p class="para-style"><span>Price Rs:</span>
                    <%= Home.housePrice %>
                  </p>

                  <p class="para-style"> <span>Description :</span>
                    <%= Home.houseDescription %>
                  </p>

                  <p class="para-style"><span>Location :</span>
                    <%= Home.houseLocation %>
                  </p>
                </div>

                <div class="user-interaction">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960" class="review-share-favorite">
                    <path
                      d="m363-390 117-71 117 71-31-133 104-90-137-11-53-126-53 126-137 11 104 90-31 133ZM80-80v-720q0-33 23.5-56.5T160-880h640q33 0 56.5 23.5T880-800v480q0 33-23.5 56.5T800-240H240L80-80Zm126-240h594v-480H160v525l46-45Zm-46 0v-480 480Z" />
